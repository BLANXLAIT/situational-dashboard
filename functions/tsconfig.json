{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "../node_modules"
    ],
    "include": [
        "src"
    ]
}